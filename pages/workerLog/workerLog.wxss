/* pages/workerLog/workerLog.wxss */
@import "../../utils/flex.wxss";
.body{width: 100%;height: 100vh;background-color: #F1F1F1;position: relative;}
.scroll-area {height: 100%}

.info-content{margin-bottom: 10px;}
.padded-10{padding: 10px;box-sizing:border-box;}
.padded-b-0{padding-bottom: 0px;}
.padded-l-5{padding-left: 5px;box-sizing:border-box;}
.log-list{padding: 10px;box-sizing:border-box;border-bottom: 1px #DDDDDD solid;background: #FFFFFF;}
.log-title{font-size: 0.8em;color: #41CC8E;padding-bottom: 10px;}
.log-img{width: 100%;height: 80px;}
.log-date{text-align: right;padding-bottom: 10px;font-size: 0.7em;}
.log-desc-title{font-size: 0.8em;padding: 5px 10px;box-sizing:border-box;}
.log-desc{font-size: 0.7em;padding: 5px 10px;box-sizing:border-box;}
.log-footer{padding: 10px;box-sizing:border-box;font-size: 0.7em;}
.log-footer-icon{width:16px;height: 16px;}
.log-more{width: 100px;height: 30px;line-height: 30px;background: #41CC8E;color: #FFFFFF;font-size: 0.8em;text-align: center;border-radius: 5px;margin-left: calc(50% - 50px)}

.img-count{position: absolute;background: rgba(0, 0, 0, 0.5);color: #FFFFFF;font-size: 0.7em;padding: 2px 3px;}
.img-video{position: absolute;width: 30px;height: 30px;margin-top: 25px;left: 50%;margin-left: -15px;}
.ellipsis-2 {
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-wrap: break-word;
	word-break: break-all;
	white-space: normal !important;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}