/* pages/workerType/workerType.wxss */
@import "../../utils/flex.wxss";
.body-bkg{background: #F5F5F5;width: 100%;height: 100vh;}
.info-title{
    overflow:hidden;
    height:100vh;
    background: #F5F5F5;
    float: left;
    width: 30%;
    box-sizing:border-box;
}

.info-title-item{font-size: 0.8em;padding: 10px 10px 10px 0;border-bottom: 1px #EEEEEE solid;}
.info-title-content{padding-left: 20px;}
.info-title-item-act{font-size: 0.8em;padding: 10px 10px 10px 0;background: #FFFFFF;}
.info-title-content-act{border-left: 5px #259B24 solid;padding-left: 15px;color: #259B24;}

.info-content{
    padding:10px 15px;
    background: #FFFFFF;
    overflow: hidden;
    /* margin-bottom: 10px; */
    color: #666666;
    font-size: 0.8em;
    width: 70%;
    float: left;
    box-sizing:border-box;
    height: 100vh;
}

.type-item{float: left;box-sizing:border-box;padding: 5px;}
.work-type{border:1px #EEEEEE solid;border-radius: 2px;float: left;text-align: center;height: 25px;line-height: 25px;font-size: 14px;color: #666666;width: 100%;box-sizing:border-box;padding: 0 10px;}
.type-act{background: #259B24;color: #FFFFFF;border:none;}
.scroll-area {height: 100%;}

.class-icon{width:40px;height: 40px;margin-left:calc(50% - 20px);position: relative;border-radius: 50%;border:3px #DDDDDD solid;box-sizing:border-box;}
.class-name{text-align: center;font-size: 0.8em;margin-top: 5px;}
.margin-b-15{margin-bottom: 15px;}

.col-icon {
    display: inline-flex;
    float:left;
    height:25px;
    line-height:25px;
    margin-left:15px;
    margin-right:10px;
}
.col-icon .searchcion{
    display: flex;
    justify-content: center;
    align-items: center;
}