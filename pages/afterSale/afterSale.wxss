/* pages/afterSale/afterSale.wxss */
@import "../../utils/flex.wxss";
.scroll-area {height: 100%;padding: 10px;box-sizing: border-box;font-size: 0.7em;}
.body{width: 100%;height: 100vh;background: #F1F1F1;}
.content{width: 100%;height: 150px;box-sizing: border-box;padding: 10px;font-size: 0.8em;background: #F1F1F1;border-bottom: 1px #DDDDDD solid;}
.commit-btn{width: 70%;margin-left: 18%;height: 40px;line-height: 40px;text-align: center;font-size: 0.8em;color: #FFFFFF;background: #41CC8E;border-radius: 10px;margin-top: 80px;}
.list-title{text-align: left;box-sizing: border-box;font-weight: bold;margin: 10px 0;font-size: 0.8em;}
.img-info{padding: 5px;box-sizing: border-box;}
.img-item{border: 1px #DDDDDD solid;border-radius: 5px;background: #FFFFFF;text-align: center;height:50px;line-height:50px;}
.img-item image{height:50px;width:100%;}
.padded-10{padding: 10px;box-sizing: border-box;}
.block{padding: 10px 10px 20px 10px;box-sizing: border-box;background: #FFFFFF;}
.img-delete{background: red;width: 10px;height: 10px;line-height: 10px;text-align: center;font-size: 1.0em;color: #FFFFFF;position: absolute;right: 0;border-radius: 50%;margin-top: -5px;}
.cl-999{color: #999999 !important;}
.desc{padding: 10px;background: #F1F1F1;box-sizing: border-box;}
.tips{font-size: 0.7em;padding: 10px;box-sizing: border-box; }