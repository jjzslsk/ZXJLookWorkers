/* pages/chatMessage/chatMessage.wxss */
.body-bg{
  background-color: #f5f5f5;
  width: 100%;
  height: 100vh;
}

.scroll-area{
  height:100%;
}

.msg-item{
  width: 100%;
  display: flex;
  height:50px;
  max-height:50px;
  padding: 8px 10px;
  background-color:#FFFFFF;
  border-bottom: 1px solid #DDDDDD;
}

.msg-item .item-ava{
  width: 50px;
}

.msg-item .item-ava image{
  width: 50px;
  height:50px;
  margin:0 auto;
  border-radius: 50%;
}

.msg-item .item-info{
  width: calc(100% - 50px);
  padding-left: 8px;
}

.msg-item .item-info .item-name{
  width:calc(100% - 20px);
  display: flex;
}

.msg-item .item-info .item-name .name{
  width:60%;
  font-size: 1em;
  color:#000000;
}

.msg-item .item-info .item-name .time{
  width:40%;
  font-size: 0.8em;
  color:#999999;
  text-align: right;
}

.msg-item .item-info .item-msg{
  widows: calc(100% - 20px);
  display: flex;
}

.msg-item .item-info .item-msg .msg{
  width:calc(100% - 3em);
  font-size: 0.9em;
  color:#999999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.msg-item .item-info .item-msg .msg-tip{
  width: 3em;
  text-align: center;
}

.msg-item .item-info .item-msg .msg-tip text{
  background-color: #D61414;
  color:#FFFFFF;
  font-size: 0.6em;
  padding: 2px 8px;
  border-radius: 10px;
  min-width:50%;
  text-align: center;
}

.ellipsis-1 {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}