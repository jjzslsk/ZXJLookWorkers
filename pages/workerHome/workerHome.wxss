.body{width: 100%;height: 100vh;background-color: #f5f5f5;position: relative;}
.scroll-area {height: calc(100% - 46px); position: relative;}
.base-info{text-align: center;padding: 20px 0;font-size: 0.8em;margin-bottom: 10px;background: #41CC8E;color: #fff;}
.avatar{width:60px;height:60px;border-radius: 50%}
.username{margin-bottom: 5px;font-size: 0.9em}
.user-box{display: flex;align-items: center;justify-content: space-around; padding: 4px 16px;}
.user-box-item{font-size: 14px;}
.info-title{padding: 10px 0;background: #FFFFFF;}
.info-title-content{border-left: 5px #259B24 solid;font-size: 0.8em;padding-left: 10px;}
.info-content{padding:10px 15px;background: #FFFFFF;overflow: hidden;margin-bottom: 10px;color: #666666;font-size: 0.8em;}
.info-img {width: 80%; display: inline-flex;align-items: center;}
.info-img image {height: 3.2rem;width: 3.2rem;padding: 0 4px;}
.info-img-icon {text-align: right;width: 20%;float: right;height: 3.2rem;line-height: 3.2rem;}
/* .info-img-icon i-icon{float: right;} */
.info-content-list {overflow: hidden;padding: 4px 0;}
.info-content-list-l {height: 6rem;width: 50%;float: left;}
.info-content-list-l image {height: 100%;width: 100%;}
.info-content-list-r {width: 50%;height: 6rem;float: right;}
.info-content-list-r text{}
.list-text {height: 6rem;display: inline-block;overflow: hidden;padding: 0 8px;
    font-size:0.8rem;
    color:#666666;
    text-align: justify;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
}